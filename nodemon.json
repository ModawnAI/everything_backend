{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "node_modules",
    ".git",
    ".vscode",
    "dist",
    "logs",
    "*.log"
  ],
  "exec": "ts-node --transpile-only src/app.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_TRANSPILE_ONLY": "true",
    "TS_NODE_FILES": "true"
  },
  "delay": "1000",
  "signal": "SIGINT",
  "events": {
    "restart": "echo '\nüîÑ Server restarting...\n'",
    "crash": "echo '\n‚ö†Ô∏è  Server crashed, waiting for changes...\n'"
  },
  "verbose": false,
  "restartable": "rs"
}
