{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": ["src/**/*.test.ts", "src/**/*.spec.ts", "src/**/*.d.ts", "node_modules", ".git", ".vscode"],
  "exec": "ts-node src/app.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "signal": "SIGINT",
  "events": {
    "restart": "echo '\nüîÑ Server restarting...\n'",
    "crash": "echo '\n‚ö†Ô∏è  Server crashed, waiting for changes...\n'"
  },
  "verbose": true,
  "restartable": "rs"
}
