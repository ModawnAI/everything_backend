{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": ["src/**/*.test.ts", "src/**/*.spec.ts", "src/**/*.d.ts", "node_modules", ".git", ".vscode"],
  "exec": "ts-node src/app.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "2500",
  "signal": "SIGTERM",
  "events": {
    "restart": "echo 'Restarting server...'",
    "crash": "echo 'Server crashed, waiting for changes...'"
  }
} 